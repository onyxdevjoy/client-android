<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/btn_waterfall" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_2"
        android:orientation="vertical" >

        <com.onyx.international.views.ScaleImageView
            android:id="@+id/imageview_waterfall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/a" />

        <TextView
            android:id="@+id/textview_waterfall_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="名字名字名字名字"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textview_waterfall_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_1"
            android:gravity="center"
            android:text="名字名字名字名字"
            android:textColor="#ff333333"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>
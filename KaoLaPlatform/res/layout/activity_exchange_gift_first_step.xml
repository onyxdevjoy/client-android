<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff7f7f5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageview_exchanged_gift_first_step"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/textview_exchanged_gift_first_step_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edittext_exchanged_gift"
            style="@style/kl_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/input_exchanged_captcha"
            android:inputType="number"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_exchanged_gift_first_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_1"
            android:onClick="onNextStepButtonClicked"
            android:text="@string/next_step"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>

</ScrollView>